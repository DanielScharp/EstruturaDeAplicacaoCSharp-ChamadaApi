@model IEnumerable<ChamadaApi.Domain.Leilao>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Código
            </th>
            <th>
                Cadastro
            </th>
            <th>
                Descrição
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                <a href="/Home/Leilao?codigo=@item.Codigo">
                    @item.Codigo
                </a>
            </td>
            <td>
                @item.Data.ToShortDateString()
            </td>
            <td>
                @item.Descricao
            </td>
        </tr>
    }
    </tbody>
</table>
